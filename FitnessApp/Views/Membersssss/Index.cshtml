@model IEnumerable<FitnessApp.Models.Member>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymBundle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BMIStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMemberOverWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembershipFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembershipTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Person.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GymBundle.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BMIStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMemberOverWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
