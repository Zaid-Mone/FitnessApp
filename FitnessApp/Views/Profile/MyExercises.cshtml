@model IEnumerable<FitnessApp.DTOs.MyExerciseDTO>
@{
    ViewData["Title"] = "My Exercises";
}

<h1>My Exercises</h1>

<div class="row m-5">
    <div class="col-12">
        <div class="table-responsive flex-row justify-content-end">
            <table class="table table-striped table-bordered" id="table_id">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExerciseCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExerciseDuration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateOfExercise)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExerciseFrom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExerciseTO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExerciseTimeFormat)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExerciseCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExerciseDuration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfExercise)
                        </td>
                        <td>
                            @item.ExerciseFrom.ToString(@"hh\:mm")
                        </td>
                        <td>
                            
                            @item.ExerciseTO.ToString(@"hh\:mm")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExerciseTimeFormat)
                        </td>
                        <td>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>

    </div>
</div>

