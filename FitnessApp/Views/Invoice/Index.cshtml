@model IEnumerable<FitnessApp.Models.Invoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Userpays)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.RemainingValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPayDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                #@item.SerialNumber
            </td>
            <td>
                @item.TotalAmount.ToString("C")
            </td>
            <td>
                @item.Userpays.ToString("C")
            </td>

            <td>
                @item.RemainingValue.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPayDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Person.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
