@model IEnumerable<FitnessApp.Models.Nutrition>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-12">

        <table class="table table-striped table-bordered" id="table_id">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MealName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Member)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateOfNutrition)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NameOfDay)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MealName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Member.Person.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfNutrition)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameOfDay)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>

}