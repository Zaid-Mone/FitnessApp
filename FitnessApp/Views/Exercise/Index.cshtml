@model IEnumerable<FitnessApp.Models.Exercise>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered" id="example" style="min-width: 840px">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExerciseCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExerciseDuration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Member.Person)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfExercise)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ExerciseTimeFormat)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExerciseCount)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.ExerciseDuration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Member.Person.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfExercise)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExerciseTimeFormat)
                    </td>
                    <td>
                        <partial name="_Buttons" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

